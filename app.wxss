page {
  background-color: #0d101d;
  color: #edf2ff;
  font-family: "PingFang SC", "Helvetica Neue", Helvetica, Arial, sans-serif;
  margin: 0;
  padding: 0;
}

button::after {
  border: none;
}

.text-soft {
  opacity: 0.6;
}

.fade-enter {
  animation: fade-in 300ms ease forwards;
}

@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
